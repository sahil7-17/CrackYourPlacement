 bool check(vector<int>& arr) {
        int n = arr.size();
        if(n < 2){ //if there are less then 2 elements then it will always be sorted and rotated 
          return true;
        }
        int count = 0;
        for(int i = 0; i<n; i++){
            if(arr[i] > arr[(i+1) % n]){
                count++;
            }
        }
        return (count <= 1);
    }
